mixin Tutor(Name, Studiengang, Studienbeginn, Studienpause)
	//- +1, falls das Sommersemester (grob) vorbei ist, -1 falls das Wintersemester (grob) noch nicht vorbei ist.
	- const Studiendauer = Studienbeginn => (new Date().getFullYear() - Studienbeginn) * 2 + (new Date().getMonth() > 7 ? 1 : 0) - (new Date().getMonth() < 2 ? 1 : 0) - (Studienpause ? Studienpause : 0)
	-
		var fs = require('fs');
		var image = 'images/tutoren/' + Name + '.jpg';
		//- console.log(fs.existsSync(image));
		image = fs.existsSync(image) ? '/' + image : '/images/tutoren/default.jpg';
	.tutor
		img(src=encodeURI(image),alt='')
		div
			h3= Name
			p #{Studiengang}
				br
				| #{Studiendauer(Studienbeginn)}. Semester

