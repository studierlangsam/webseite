{
  "extends": "stylelint-config-standard-scss",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "indentation": "tab",
    "string-quotes": "single",
    "number-leading-zero": "never",
    "max-line-length": 140,
    "declaration-empty-line-before": null,
    "scss/dollar-variable-empty-line-before": null,
    "font-family-name-quotes": "always-unless-keyword",
    "declaration-block-no-redundant-longhand-properties": null,
    "no-descending-specificity": null,
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "at-variables",
      "declarations",
      "at-rules",
      "rules"
    ],
    "order/properties-order": [
      [
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "display",
            "flex-direction",
            "flex-wrap",
            "flex-direction",
            "justify-content",
            "align-content",
            "align-items"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "position",
            "top",
            "right",
            "bottom",
            "left"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "order",
            "flex",
            "flex-basis",
            "flex-grow",
            "flex-shrink",
            "align-self"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "columns",
            "column-gap",
            "column-fill",
            "column-rule",
            "column-span",
            "column-count",
            "column-width"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "float",
            "clear"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "transform",
            "transition",
            "animation",
            "animation-name",
            "animation-duration",
            "animation-timing-function",
            "animation-delay",
            "animation-iteration-count",
            "animation-direction",
            "animation-fill-mode",
            "animation-play-state"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "visibility",
            "opacity",
            "z-index"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "margin",
            "margin-top",
            "margin-bottom",
            "margin-left",
            "margin-right"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "outline"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "border",
            "border-top",
            "border-right",
            "border-bottom",
            "border-left",
            "border-width",
            "border-top-width",
            "border-right-width",
            "border-bottom-width",
            "border-left-width",
            "border-style",
            "border-top-style",
            "border-right-style",
            "border-bottom-style",
            "border-left-style",
            "border-radius",
            "border-top-left-radius",
            "border-top-right-radius",
            "border-bottom-left-radius",
            "border-bottom-right-radius"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "border-color",
            "border-top-color",
            "border-right-color",
            "border-bottom-color",
            "border-left-color"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "box-shadow"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "background",
            "background-color",
            "background-image",
            "background-repeat",
            "background-position",
            "background-size",
            "cursor"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "padding",
            "padding-top",
            "padding-bottom",
            "padding-left",
            "padding-right"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "box-sizing",
            "width",
            "min-width",
            "max-width",
            "height",
            "min-height",
            "max-height"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "overflow"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "list-style",
            "caption-side",
            "table-layout",
            "border-collapse",
            "border-spacing",
            "empty-cells"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "vertical-align",
            "text-align",
            "text-indent",
            "text-transform",
            "text-decoration",
            "text-rendering",
            "text-shadow",
            "text-overflow",
            "line-height",
            "word-spacing",
            "letter-spacing",
            "white-space"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "color",
            "font",
            "font-family",
            "font-size",
            "font-weight",
            "font-smoothing",
            "font-style"
          ]
        },
        {
          "emptyLineBefore": "always",
          "noEmptyLineBetween": true,
          "properties": [
            "content",
            "quotes"
          ]
        }
      ],
      {
        "unspecified": "bottom",
        "emptyLineBeforeUnspecified": "always"
      }
    ]
  }
}
